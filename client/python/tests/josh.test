#!/bin/sh
#specify MPO server address. The API will read this value.
#defaults are used if environment is not set
if ! [ -n "${MPO_HOST:+x}" ]
then
  export MPO_HOST=https://localhost:8443
fi


if ! [ -n "${MPO_VERSION:+x}" ]
then
  export MPO_VERSION=v0
fi


if ! [ -n "${MPO_HOME:+x}" ]
then
  echo MPO_HOME not defined, exitting
  exit 
fi

if ! [ -n "${MPO:+x}" ]
then
  export MPO="$MPO_HOME/client/python/mpo_testing.py --user=$USER"
fi

#use API methods to create a workflow
wid=`$MPO init --name=EFIT --desc="A first EFIT workflow" --type=EFIT`
oid1=`$MPO add  $wid $wid --name=shot --desc="Plasma shot number" --uri=150335`
oid2=`$MPO add  $wid $wid --name="Snap file" --desc="EFIT input file" --uri="\\efit01:namelist"`
oid3=`$MPO add  $wid $wid --name="Green's Table" --desc="Green's table files" --uri="/link/efit/rpf[01-12].d3d"`
aid1=`$MPO step $wid $oid1 --input=$oid2 --input=$oid3 --name="Read Input Files" --desc="Read shot number, snap file etc..."`
cid=`$MPO comment $aid1 "This program is the only one in this workflow"`
oid4=`$MPO add  $wid $wid --name="Plasma Current" --desc="Plasma current in MA" --uri="\\magnetics::ip"`
oid5=`$MPO add  $wid $wid --name="PTDATA" --desc="Point Data" --uri="???"`
aid2=`$MPO step $wid $oid4 --input=$oid5 --name="Read PTDATA" --desc="Read PTDATA and Plasma Current" --uri=EFIT`
aid3=`$MPO step $wid $aid2  --name="Calibrate Data" --desc="Calibrate input to EFIT" --uri=EFIT`
aid4=`$MPO step $wid $aid3 --input $aid1 --name="EFIT Data averaging" --desc="Average EFIT Data" --uri=EFIT`
aid5=`$MPO step $wid $aid4 --name="Run PTDATA" --desc="Run the EFIT code to FIT the equilibria" --uri=EFIT`
aid6=`$MPO step $wid $aid5  --name="Write EFIT Outputs" --desc="Write the EFIT output files" --uri=EFIT`
oid6=`$MPO add  $wid $aid6 --name="A File" --desc="A EQDSK File" --uri="\\efit01::results:aeqdsk"`
oid7=`$MPO add  $wid $aid6 --name="G File" --desc="G EQDSK File" --uri="\\efit01::results:geqdsk"`
#aid7=`$MPO step $wid $oid6  --name="EFIT Complete" --desc="Should this be different than step?" --uri=EFIT`
