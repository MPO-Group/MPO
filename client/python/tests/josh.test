#!/bin/sh
#specify MPO server address. The API will read this value.
#defaults are used if environment is not set
if ! [ -n "${MPO_HOST:+x}" ]
then
  export MPO_HOST=https://localhost:8443
fi


if ! [ -n "${MPO_VERSION:+x}" ]
then
  export MPO_VERSION=v0
fi


if ! [ -n "${MPO_HOME:+x}" ]
then
  echo MPO_HOME not defined, exiting
  exit
fi

if ! [ -n "${MPO:+x}" ]
then
  export MPO="$MPO_HOME/client/python/mpo_arg.py"
fi

if ! [ -n "${MPO_AUTH:+x}" ]
then
  export MPO_AUTH=$MPO_HOME/MPODemoUser.pem
fi

shot=550335
#use API methods to create a workflow
wid=`$MPO init --name=EFIT --desc="A first EFIT workflow" --type=EFIT`
did1=`$MPO add_do --name=shot --desc="Plasma shot number" --uri=$shot`
echo $did1
oid1=`$MPO add  $wid $wid $did1`
did2=`$MPO add_do --name="Snap file" --desc="EFIT input file" --uri="$($MPO -f raw archive -p mdsplus -s $shot -t efit02 -p'\efit02:namelist')"`
oid2=`$MPO add  $wid $wid $did2`
did3=`$MPO add_do  --name="Green's Table" --desc="Green's table files" --uri="$($MPO -f raw archive -p filesys -f/link/efit/rpf[01-12].d3d)"`
oid3=`$MPO add  $wid $wid $did3`
aid1=`$MPO step $wid $oid1 --input=$oid2 --input=$oid3 --name="Read Input Files" --desc="Read shot number, snap file etc..."`
cid=`$MPO comment $aid1 "This program is the only one in this workflow"`
did4=`$MPO add_do  --name="Plasma Current" --desc="Plasma current in MA" --uri="$($MPO -f raw archive -p mdsplus -s $shot -t magnetics -p'\magnetics::ip')"`
oid4=`$MPO add  $wid $wid $did4`
did5=`$MPO add_do  --name="PTDATA" --desc="Point Data" --uri="???"`
oid5=`$MPO add  $wid $wid $did5`
aid2=`$MPO step $wid $oid4 --input=$oid5 --name="Read PTDATA" --desc="Read PTDATA and Plasma Current" --uri=EFIT1`
aid3=`$MPO step $wid $aid2  --name="Calibrate Data" --desc="Calibrate input to EFIT" --uri=EFIT2`
aid4=`$MPO step $wid $aid3 --input $aid1 --name="EFIT Data averaging" --desc="Average EFIT Data" --uri=EFIT3`
aid5=`$MPO step $wid $aid4 --name="Run PTDATA" --desc="Run the EFIT code to FIT the equilibria" --uri=EFIT4`
aid6=`$MPO step $wid $aid5  --name="Write EFIT Outputs" --desc="Write the EFIT output files" --uri=EFIT5`
did6=`$MPO add_do  --source $aid6 --name="A File" --desc="A EQDSK File" --uri="$($MPO -f raw archive -p mdsplus -s $shot -t efit01 -p'\efit01::results:aeqdsk')"`oid6=`$MPO add  $wid $aid6 $did6`
did7=`$MPO add_do --source $aid6 --name="G File" --desc="G EQDSK File" --uri="$($MPO -f raw archive -p mdsplus -s $shot -t efit01 -p'\efit01::results:geqdsk')"`
oid7=`$MPO add  $wid $aid6 $did7`
#aid7=`$MPO step $wid $oid6  --name="EFIT Complete" --desc="Should this be different than step?" --uri=EFIT6`
